<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <service id="api_platform.json_streamer.stream_writer" class="Symfony\Component\JsonStreamer\JsonStreamWriter">
            <argument type="service_locator" id="json_streamer.value_transformer" />
            <argument type="service" id="api_platform.jsonld.json_streamer.write.property_metadata_loader" />
            <argument>%.json_streamer.stream_writers_dir%</argument>
        </service>

        <service id="api_platform.jsonld.json_streamer.write.property_metadata_loader" class="ApiPlatform\JsonLd\JsonStreamer\PropertyMetadataLoader">
            <argument type="service" id="json_streamer.write.property_metadata_loader" />
        </service>
    </services>
</container>

